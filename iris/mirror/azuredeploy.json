{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "domainName": {
      "type": "string",
      "defaultValue": "[concat('iris-', uniqueString(resourceGroup().id))]",
      "metadata": {
        "description": "Domain name of the public jumpbox"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Virtual machine administrator username"
      }
    },
    "adminPassword": {
      "type": "securestring"
    },
    "adminPasswordOrKey": {
    "type": "securestring",
      "metadata": {
      "description": "SSH Key or password for the Virtual Machine. SSH key is recommended."
      }
    },
    "tshirtSize": {
      "type": "string",
      "defaultValue": "Small",
      "allowedValues": [
        "Small",
        "Medium",
        "Large",
        "XLarge"
      ],
      "metadata": {
        "description": "T-shirt size of the IRIS deployment"
      }
    },
    "jumpbox": {
      "type": "string",
      "defaultValue": "Enabled",
      "allowedValues": [
        "Enabled",
        "Disabled"
      ],
      "metadata": {
        "description": "The flag allowing to enable or disable provisioning of the jumpbox VM that can be used to access the IRIS environment"
      }
    },
    "jumpBoxSize": {
      "type": "string",
      "defaultValue": "Standard_A1_V2",
      "metadata": {
        "description": "Size of the jumpbox VM, ignored if jumbox is disabled."
      }
    },
    "arbiter": {
      "type": "string",
      "defaultValue": "Enabled",
      "allowedValues": [
        "Enabled",
        "Disabled"
      ]
    },
    "arbiterSize": {
      "type": "string",
      "defaultValue": "Standard_A1_V2",
      "metadata": {
        "description": "Size of the arbiter VM, ignored if arbiter is disabled."
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "vnet",
      "metadata": {
        "description": "Virtual network name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
      },
      "defaultValue": "[deployment().properties.templateLink.uri]"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
      },
      "defaultValue": ""
    },
    "_secretsLocation": {
      "type": "string",
      "metadata": {
        "description": "URL of the Standard storage account blob container to receive shared secrets and config files. (ie. https://mystandardstorage.blob.core.windows.net/artifactsfolder )"
      }
    },
    "_secretsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "Generated Shared Acccess Signature token to access _secretsLocation"
      }
    }
  },
  "variables": {
    "sharedTemplateUrl": "[uri(parameters('_artifactsLocation'), concat('shared-resources.json', parameters('_artifactsLocationSasToken')))]",
    "deploymentSize": {
      "Small": {
        "vmSize": "Standard_A2_v2",
        "diskSize": 1023,
        "diskCount": 2,
        "vmCount": 2,
        "slaveCount": 1,
        "storage": {
          "count": 1,
          "pool": "db",
          "map": [
            0,
            0
          ],
          "jumpbox": 0
        }
      },
      "Medium": {
        "vmSize": "Standard_A2_v2",
        "diskSize": 1023,
        "diskCount": 8,
        "vmCount": 2,
        "slaveCount": 1,
        "storage": {
          "count": 2,
          "pool": "db",
          "map": [
            0,
            1
          ],
          "jumpbox": 0
        }
      },
      "Large": {
        "vmSize": "Standard_A4_v2",
        "diskSize": 1023,
        "diskCount": 16,
        "vmCount": 3,
        "slaveCount": 2,
        "storage": {
          "count": 2,
          "pool": "db",
          "map": [
            0,
            1,
            1
          ],
          "jumpbox": 0
        }
      },
      "XLarge": {
        "vmSize": "Standard_A8_v2",
        "diskSize": 1023,
        "diskCount": 16,
        "vmCount": 4,
        "slaveCount": 3,
        "storage": {
          "count": 2,
          "pool": "db",
          "map": [
            0,
            0,
            1,
            1
          ],
          "jumpbox": 0
        }
      }
    },
    "arbiterTemplateUrl": "[uri(parameters('_artifactsLocation'), concat('arbiter-resources.json', parameters('_artifactsLocationSasToken')))]",
    "jumpboxTemplateUrl": "[uri(parameters('_artifactsLocation'), concat('jumpbox-resources.json', parameters('_artifactsLocationSasToken')))]",
    "databaseTemplateUrl": "[uri(parameters('_artifactsLocation'), concat('database-resources.json', parameters('_artifactsLocationSasToken')))]",
    "osSettings": {
      "scripts": [
        "[uri(parameters('_artifactsLocation'), concat('install_iris.sh', parameters('_artifactsLocationSasToken')))]",
        "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/shared_scripts/ubuntu/vm-disk-utils-0.1.sh"
      ],
      "imageReference": {
        "publisher": "Canonical",
        "offer": "0001-com-ubuntu-server-focal",
        "sku": "20_04-lts",
        "version": "latest"
      }
    },
    "networkSettings": {
      "vnetName": "[parameters('virtualNetworkName')]",
      "addressPrefix": "10.0.0.0/16",
      "subnets": {
        "dmz": {
          "name": "dmz",
          "prefix": "10.0.0.0/24",
          "vnet": "[parameters('virtualNetworkName')]"
        },
        "data": {
          "name": "data",
          "prefix": "10.0.1.0/24",
          "vnet": "[parameters('virtualNetworkName')]"
        }
      }
    },
    "availabilitySetSettings": {
      "name": "irisAvailabilitySet",
      "fdCount": 2,
      "udCount": 5
    },
    "loadBalancerName": "ilb"
  },
  "resources": [
    {
      "name": "shared",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('sharedTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "networkSettings": {
            "value": "[variables('networkSettings')]"
          },
          "availabilitySetSettings": {
            "value": "[variables('availabilitySetSettings')]"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    },
    {
      "name": "master-node",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'arbiter')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('databaseTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnets.data]"
          },
          "commonSettings": {
            "value": {
              "adminUsername": "[parameters('adminUsername')]",
              "namespace": "ms"
            }
          },
          "machineSettings": {
            "value": {
              "vmSize": "[variables('deploymentSize')[parameters('tshirtSize')].vmSize]",
              "diskCount": "[variables('deploymentSize')[parameters('tshirtSize')].diskCount]",
              "diskSize": "[variables('deploymentSize')[parameters('tshirtSize')].diskSize]",
              "vmCount": 1,
              "availabilitySet": "[variables('availabilitySetSettings').name]",
              "zone": "2"
            }
          },
          "masterIpAddress": {
            "value": "0"
          },
          "arbiterIpAddress": {
            "value": "[reference('arbiter').outputs.arbiterip.value]"
          },
          "dbType": {
            "value": "MASTER"
          },
          "privateIPAddress" : {
            "value": "10.0.1.11"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          },
          "_secretsLocation": {
            "value": "[parameters('_secretsLocation')]"
          },
          "_secretsLocationSasToken": {
            "value": "[parameters('_secretsLocationSasToken')]"
          },
          "loadBalancerName": {
            "value": "[variables('loadBalancerName')]"
          }
        }
      }
    },
    {
      "name": "slave-node",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'master-node')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('databaseTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnets.data]"
          },
          "commonSettings": {
            "value": {
              "adminUsername": "[parameters('adminUsername')]",
              "namespace": "sl"
            }
          },
          "machineSettings": {
            "value": {
              "vmSize": "[variables('deploymentSize')[parameters('tshirtSize')].vmSize]",
              "diskCount": "[variables('deploymentSize')[parameters('tshirtSize')].diskCount]",
              "diskSize": "[variables('deploymentSize')[parameters('tshirtSize')].diskSize]",
              "vmCount": "[variables('deploymentSize')[parameters('tshirtSize')].slaveCount]",
              "availabilitySet": "[variables('availabilitySetSettings').name]",
              "zone": "3"
            }
          },
          "masterIpAddress": {
            "value": "[reference('master-node').outputs.masterip.value]"
          },
          "arbiterIpAddress": {
            "value": "none"
          },
          "dbType": {
            "value": "SLAVE"
          },
          "privateIPAddress" : {
            "value": "10.0.1.12"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          },
          "_secretsLocation": {
            "value": "[parameters('_secretsLocation')]"
          },
          "_secretsLocationSasToken": {
            "value": "[parameters('_secretsLocationSasToken')]"
          },
          "loadBalancerName": {
            "value": "[variables('loadBalancerName')]"
          }
        }
      }
    },

    {
      "condition": "[equals('Enabled', parameters('arbiter'))]",
      "name": "arbiter",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'shared')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('arbiterTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "commonSettings": {
            "value": {
              "adminUsername": "[parameters('adminUsername')]",
              "namespace": "arbiter"
            }
          },
          "adminPasswordOrKey": {
            "value": "[parameters('adminPasswordOrKey')]"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnets.data]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          },
          "vmSize": {
            "value": "[parameters('arbiterSize')]"
          },
          "machineSettings": {
            "value": {
              "availabilitySet": "[variables('availabilitySetSettings').name]",
              "zone": "1"
            }
          },
          "masterIpAddress": {
            "value": "0"
          },
          "dbType": {
            "value": "ARBITER"
          },
          "_artifactsLocation": {
            "value": "[parameters('_artifactsLocation')]"
          },
          "_secretsLocation": {
            "value": "[parameters('_secretsLocation')]"
          },
          "_secretsLocationSasToken": {
            "value": "[parameters('_secretsLocationSasToken')]"
          }
        }
      }
    },
    {
      "condition": "[equals('Enabled', parameters('jumpbox'))]",
      "name": "jumpbox",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'shared')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('jumpboxTemplateUrl')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          },
          "dnsName": {
            "value": "[parameters('domainName')]"
          },
          "commonSettings": {
            "value": {
              "adminUsername": "[parameters('adminUsername')]",
              "namespace": "jumpbox"
            }
          },
          "adminPasswordOrKey": {
            "value": "[parameters('adminPasswordOrKey')]"
          },
          "subnet": {
            "value": "[variables('networkSettings').subnets.dmz]"
          },
          "osSettings": {
            "value": "[variables('osSettings')]"
          },
          "vmSize": {
            "value": "[parameters('jumpBoxSize')]"
          }
        }
      }
    }
  ],
  "outputs": {
  }
}
